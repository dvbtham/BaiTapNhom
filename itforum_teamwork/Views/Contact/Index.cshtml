@model itforum_teamwork.Models.MailModel

@{
    ViewBag.Title = "Liên hệ";
    ViewBag.Contact = "active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="contact-page">
    <div class="bg">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h2 class="title text-center">liên hệ chúng tôi</h2>

            <div class="row">
                <div class="col-sm-6">
                    <h4 class="orange">Nhập để liên hệ chúng tôi</h4>
                    <div class="contact-form">
                        <form id="main-contact-form" class="contact-form row">
                            <div class="form-group col-md-6">
                                @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "Nhập họ tên...." })
                                @Html.ValidationMessageFor(m => m.FromName, "", new { @class="text-danger", @autofocus="autofocus" })
                            </div>
                            <div class="form-group col-md-6">
                                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "Nhập email của bạn...." })
                                    @Html.ValidationMessageFor(m => m.FromEmail, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-12">
                                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Nhập tiêu đề...." })
                                @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-12">
                                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Nhập nội dung...." })
                                @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-10">
                                    <input type="submit" class="btn btn-primary pul-left" value="Gửi" />
                            </div>
                        </form>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="contact-info">
                        <h4 class="orange">Thông tin liên hệ</h4>
                        @{Html.RenderAction("_ContactPartial", "Contact");}
                    </div>
                </div>
            </div>
        }
    </div>
</div>
