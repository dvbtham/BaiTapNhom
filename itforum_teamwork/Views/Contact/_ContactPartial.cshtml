@model Model.EF.Contact
<address>
    <p id="slogan"> @Model.Slogan </p>
    <p><i class="fa fa-envelope"></i> @Model.Address</p>
    <p><i class="fa fa-phone"></i> @Model.Phone</p>
    @if (!string.IsNullOrEmpty(Model.Fax))
    {
        <p><i class="fa fa-fax"></i> @Model.Fax</p>
    }
    <p><i class="fa fa-envelope"></i> @Model.Email</p>
</address>
