<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="codto.com được sáng lập bởi nhóm sinh viên trường đại học đông á.">
    <meta name="author" content="codto.com">
    <meta property="fb:app_id" content="1750459958499714" />
    <meta property="fb:admins" content="100010640762642" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/csscore")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head><!--/head-->

<body>
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.6&appId=1750459958499714";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <header id="header">
        <!--header-->
        <div class="header_top">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="contactinfo">
                            @{Html.RenderAction("TopContactInfo", "Contact");}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        @Html.Partial("_AboutSocial")
                    </div>
                </div>
            </div>
        </div><!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                @Html.Partial("_LogoPartial")
            </div>
        </div><!--/header-middle-->

        <div class="header-bottom">
            <!--header-bottom-->
            @Html.Partial("_HeaderBottom")
        </div><!--/header-bottom-->
    </header><!--/header-->

    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="left-sidebar">
                        <div class="categoty_post">
                            <!--categoty_post-->
                            <h2>DANH MỤC HOT</h2>
                            @{Html.RenderAction("PopCategory", "Category");}
                        </div><!--/categoty_post-->

                        <div class="shipping text-center">
                            <!--shipping-->
                            <img src="/Content/Client/images/monhoc/advertise.jpg" />
                        </div><!--/shipping-->
                        <div class="clear"></div>
                        <div class="categoty_post">
                            <!--categoty_post-->
                            <h2>Chuyên mục Tài nguyên</h2>
                            @{Html.RenderAction("AssetsCategory", "Category");}
                        </div><!--/categoty_post-->

                        <br />
                        @{Html.RenderAction("Top10Article", "Article");}
                        <br />
                        <div class="categoty_post">
                            <!--categoty_post-->
                            <h2>Tag</h2>
                            @{Html.RenderAction("Index", "Tag");}
                        </div><!--/categoty_post-->
                        <br />
                    </div>
                </div>

                <div class="col-sm-9 padding-right" id="searchResult">
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                            @TempData["AlertMessage"]
                        </div>
                    }
                    
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>
    <footer id="footer">
        
        @Html.Partial("_FooterPartial")

    </footer><!--/Footer-->

     @Scripts.Render("~/bundles/jscore")
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Content/Admin/js/jsCounterHub/jsHitCounter.js"></script>

    @RenderSection("jsFooter", required: false)
</body>
</html>